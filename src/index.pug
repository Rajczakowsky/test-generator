doctype html
html(lang='en')
 head
   title ola
   meta(charset='utf-8')
   meta(name='viewport' content='width=device-width, initial-scale=1, viewport-fit=cover')
   meta(name='theme-color' content='#000000')

   if styles
      each style in styles
         link(rel='stylesheet' href=style.publicPath)
   include includes/googleTagManagerHeadPart.pug
 body
   noscript You need to enable JavaScript to run this app.
   include includes/googleTagManagerBodyPart.pug
   script.
      window.config = !{JSON.stringify(configuration)}
   div#app
   if scripts
      each script in scripts
         script(src=script.publicPath)
